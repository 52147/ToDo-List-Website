<%- include("header") -%>

<!-- BootStrap Scripts -->
<!-- CSS only -->

<meta name="viewport" content="width=device-width, initial-scale=1.0">
<script src="https://kit.fontawesome.com/f5d2edca5a.js" crossorigin="anonymous"></script>


<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">


  <%  newListItems.forEach(function(item){ %>

  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
      <p><%=item.name%></p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>"></input>
  </form>
  <%  }) %>

  <form class="item" action="/" method="post">
    <div class="i"><input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button class="bu" type="submit" name="list" value="<%= listTitle %>"><i class="fa-solid fa-plus"></i></button>
    </div>
  </form>
</div>

<%- include("footer") -%>